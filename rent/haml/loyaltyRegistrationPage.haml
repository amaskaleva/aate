- @breadcrumbs = ["Главная", "Программа лояльности «Я люблю Комус»"]
- contentRightHtml = Haml::Engine.new(File.read("loyaltyRegistration/title.haml")).render(parent) + Haml::Engine.new(File.read("loyaltyRegistration/loyaltyBanner.haml")).render(parent) + Haml::Engine.new(File.read("loyaltyRegistration/loyaltyPageError.haml")).render(parent) + Haml::Engine.new(File.read("loyaltyRegistration/loyaltyPageSuccess.haml")).render(parent)+Haml::Engine.new(File.read("loyaltyRegistration/loyaltyPageInfo.haml")).render(parent)+File.read("loyaltyRegistration/loyaltyPageForm.html")
- contentLeftHtml = Haml::Engine.new(File.read("commonPagesComponents/banners.haml")).render(parent, :emptyBlock => false)
